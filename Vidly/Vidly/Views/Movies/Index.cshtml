@model Vidly.ViewModel.RandomMovieViewModel
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1> MOVIES </h1>

<ul>
    <table class="table table-bordered table-hover"

    <thead>
    <tr>
        <th>Movie</th>
        <th>Genre</th>
    </tr>
    </thead>
    <tbody>


        @foreach (var movie in Model.Movies)
        {
            <tr>
                <td>

                    @Html.ActionLink(@movie.Name, // linkText
                        "Edit", // actionName
                        "Movies", // controllerName
                        new {Id = @movie.Id}, //parameter
                        null // htmlAttributes
                        )
                </td>
                
                <td>@movie.Genre</td>
    
            </tr>
        }

            

        </tbody>

    </table>
</ul>


